@using Gymbuddy.Core.Entities
@using Gymbuddy.Infrastructure
@using Gymbuddy.ViewModels
@model IEnumerable<AdministrationViewModel>
<div class="container">
    <div class="row">
        <div class="col-md-4">Users Active:<span id="usersConnected"></span></div>
    </div>
</div>
 <table class="table table-hover">
    <thead>
        <tr>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Username</th>
            <th>Age</th>
            <th>Role</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var mod in Model)
      {
        <tr>
            <td>@mod.FirstName</td>
            <td>@mod.LastName</td>
            <td>@mod.Username</td>
            <td>@mod.Age</td>
                <td>@foreach(var item in mod.UserRoles)
                    {
                        <span>@item.Role.Name</span>
                    }</td>
                <td><a class="btn btn-primary" asp-action="EditAcc" asp-controller="Administration" asp-route-id="@mod.Id">Edit</a></td>
           <td><a class="btn btn-danger" asp-action="DeleteAcc" asp-controller="Administration" asp-route-id="@mod.Id">Delete</a></td>
            
        </tr>
      }
    </tbody>
   </table>
<script src="~/js/signalr.js"></script>
<script src="~/js/usersCount.js"></script>
