@using Gymbuddy.Entities
@using Gymbuddy.ViewModels
@model User
<h1 class="h1" style="color:white">Profile</h1>
<section class="vh-100" >
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-left align-items-baseline h-100">
      <div class="col col-md-9 col-lg-7 col-xl-5">
        <div class="card" style="border-radius: 15px;">
          <div class="card-body p-4">
            <div class="d-flex text-black">
             <div class="flex-grow-1 ms-3">
                 
                 <h4 >Information</h4>
               
                <h5 class="mb-1">Name:@Model.Name</h5>
                <p class="mb-1">Username:@Model.username</p>
                <p class="mb-1">Email:@Model.email</p>
               
              </div>
            </div>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>